{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "arm_general_release",
            "displayName": "ARM - General - Release",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "toolchainFile": "cmake/toolchains/aarch64.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "arm_sve_release",
            "displayName": "ARM - SVE - Release",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "toolchainFile": "cmake/toolchains/aarch64.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS_INIT": "-march=armv8-a+sve"
            }
        },
        {
            "name": "x86_general_release",
            "displayName": "x86 - General - Release",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "x86_avx2_release",
            "displayName": "x86 - AVX2 - Release",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS_INIT": "-mavx2"
            }
        },
        {
            "name": "x86_avx512_release",
            "displayName": "x86 - AVX512 - Release",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS_INIT": "-mavx512f"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "arm_general_release",
            "configurePreset": "arm_general_release"
        },
        {
            "name": "arm_sve_release",
            "configurePreset": "arm_sve_release"
        },
        {
            "name": "x86_general_release",
            "configurePreset": "x86_general_release"
        },
        {
            "name": "x86_avx2_release",
            "configurePreset": "x86_avx2_release"
        },
        {
            "name": "x86_avx512_release",
            "configurePreset": "x86_avx512_release"
        }
    ]
}