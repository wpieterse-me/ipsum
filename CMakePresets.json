{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "arm_general_debug",
            "displayName": "ARM - General - Debug",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "toolchainFile": "cmake/toolchains/aarch64.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "x86_general_debug",
            "displayName": "x86 - General - Debug",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "x86_avx2_debug",
            "displayName": "x86 - AVX2 - Debug",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS_INIT": "-mavx2"
            }
        },
        {
            "name": "x86_avx512_debug",
            "displayName": "x86 - AVX512 - Debug",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS_INIT": "-mavx512f"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "arm_general_debug",
            "configurePreset": "arm_general_debug"
        },
        {
            "name": "x86_general_debug",
            "configurePreset": "x86_general_debug"
        },
        {
            "name": "x86_avx2_debug",
            "configurePreset": "x86_avx2_debug"
        },
        {
            "name": "x86_avx512_debug",
            "configurePreset": "x86_avx512_debug"
        }
    ]
}